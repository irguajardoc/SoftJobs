{
  "info": {
    "name": "SoftJobs API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "email",
      "value": "docente@desafiolatam.com"
    },
    {
      "key": "password",
      "value": "123456"
    }
  ],
  "item": [
    {
      "name": "Healthcheck",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": []
        }
      }
    },
    {
      "name": "Registrar usuario",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/usuarios",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "usuarios"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\",\n  \"rol\": \"Full Stack Developer\",\n  \"lenguage\": \"JavaScript\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Guarda el token del login en la variable de colecci√≥n",
              "const jsonData = pm.response.json();",
              "if (jsonData?.token) {",
              "  pm.collectionVariables.set('token', jsonData.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Obtener usuario (requiere token)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/usuarios",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "usuarios"
          ]
        }
      }
    }
  ]
}